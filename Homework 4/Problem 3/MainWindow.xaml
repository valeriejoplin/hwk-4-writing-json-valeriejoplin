<Window x:Class="Problem_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Problem_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF332626">
        <Button x:Name="btnplay" Content="Play/Pause" HorizontalAlignment="Left" Margin="81,59,0,0" VerticalAlignment="Top" RenderTransformOrigin="-12.748,-3.087" Background="#FF34EB3E" Click="btnplay_Click"/>
        <Button x:Name="btnstop" Content="Stop" HorizontalAlignment="Left" Margin="169,59,0,0" VerticalAlignment="Top" RenderTransformOrigin="-12.748,-3.087" Width="56" Background="#FFF32525" Click="btnstop_Click"/>
        <Button x:Name="btnVideo" Content="Get Video" HorizontalAlignment="Left" Margin="648,64,0,0" VerticalAlignment="Top" RenderTransformOrigin="-12.748,-3.087" Height="29" Width="61" Background="#FF4AA7DD" Click="btnVideo_Click"/>
        <Label Content="Generate Random Video!!!" HorizontalAlignment="Left" Margin="272,38,0,0" VerticalAlignment="Top" FontSize="24" FontFamily="Times New Roman" Background="#FFF8F7F7"/>
        <MediaElement x:Name="MED" HorizontalAlignment="Left" Height="265" Margin="111,145,0,0" VerticalAlignment="Top" Width="546"/>

    </Grid>
</Window>
